<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Login</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
  </head>

  <body class="d-flex flex-column min-vh-100">
    <nav class="navbar bg-primary">
      <ul class="nav w-100 justify-content-end">
        <li class="nav-item text-center border-end border-light">
          <a class="nav-link text-white" href="/about">Informatie</a>
        </li>
        <li class="nav-item text-center">
          <a class="nav-link text-white" href="/">Start</a>
        </li>
      </ul>
    </nav>

    <!-- Alert -->

    <!-- <% if (error) { %> -->

    <% if (error !== null) { %>
    <div
      class="alert alert-warning alert-dismissible fade show position-fixed w-100 mt-5"
      role="alert"
      id="loginAlert"
    >
      <strong><%= error %></strong>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
    <% } %>

    <!-- <% } %> -->

    <main class="flex-grow-1 d-flex justify-content-center align-items-center">
      <div class="card shadow-sm p-4" style="width: 22rem">
        <h4 class="text-center mb-3">Login</h4>
        <form action="/login" method="post" class="d-grid gap-3">
          <input
            type="text"
            name="username"
            class="form-control"
            placeholder="Username"
            required
          />
          <input
            type="password"
            name="password"
            class="form-control"
            placeholder="Password"
            required
          />
          <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
      </div>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>

    <script>
      setTimeout(() => {
        const alert = document.getElementById("loginAlert");
        if (alert) {
          const bsAlert = new bootstrap.Alert(alert);
          bsAlert.close();
        }
      }, 3000);
    </script>
  </body>
</html>
