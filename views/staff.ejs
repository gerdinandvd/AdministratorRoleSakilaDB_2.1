<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Staf</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  </head>

  <body>
    <%- include('partials/nav-bar') %>
    <h1>Staf pagina</h1>
    <div class="container mt-4">
      <div class="row">
  <% staff.forEach(member => { %>
    <div class="col-4">
  <div class="card h-100" onclick="window.location.href='/staff/member/<%= member.staff_id %>'" style="cursor: pointer;">

    <% if (member.pictureBase64) { %>
      <img src="<%= member.pictureBase64 %>" class="card-img-top" alt="staff image" />
    <% } else { %>
      <img src="/images/personprofilepicture.png" class="card-img-top" alt="staff image" />
    <% } %>

    <div class="card-body">
      <h5 class="card-title"><%= member.first_name %> <%= member.last_name %></h5>
      <p class="card-text"><% if(member.isActive) { %>
      <img src="/images/greencircle.png" alt="actief" style="width: 15px; height: 15px;" />
      <% } else { %>
      <img src="/images/graycircle.png" alt="niet actief" style="width: 15px; height: 15px;" />
      <% } %>
      
      </p>
    </div>
  </div>
</div>

  <% }) %>
</div>


    <% if (hasPreviousPage) { %>
    <a href="<%=(currentPage -1) %>"><button>terug</button></a>
    <% } %> <% for (let page = 1; page <= amount_of_pages; page++) { %>
    <a href="<%=page%>"><button><%= page %></button></a>
    <% } %> <% if (hasNextPage) { %>
    <a href="<%=(currentPage +1)%>"><button>verder</button></a>

    <% } %>

  </body>
</html>
